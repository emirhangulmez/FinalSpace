<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:paddingBottom="16dp"
            >

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="fitXY"
                    app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
                    android:layout_marginVertical="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/characterDetailImage" />

            <TextView
                    android:id="@+id/infoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/characterDetailImage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            <!--ABOUT-->
            <com.google.android.material.card.MaterialCardView
                    style="@style/Widget.Material3.CardView.Elevated"
                    android:id="@+id/aboutCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:cardCornerRadius="4dp"
                    app:cardPreventCornerOverlap="true"
                    app:layout_constraintTop_toBottomOf="@+id/infoTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <!--NAME-->
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:text="Name" />

                        <TextView
                                android:id="@+id/characterDetailName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAlignment="textEnd"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                tools:text="Name" />
                    </LinearLayout>

                    <!--LINE-->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:alpha="0.2"
                            android:layout_marginVertical="8dp"
                            android:background="@color/shimmer_placeholder" />

                    <!--STATUS-->
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:text="Status" />

                        <TextView
                                android:id="@+id/characterDetailStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAlignment="textEnd"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                tools:text="Alive" />
                    </LinearLayout>


                    <!--LINE-->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:alpha="0.2"
                            android:layout_marginVertical="8dp"
                            android:background="@color/shimmer_placeholder" />

                    <!--SPECIES-->
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:text="Species" />

                        <TextView
                                android:id="@+id/characterDetailSpecies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:textAlignment="textEnd"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                tools:text="Human" />
                    </LinearLayout>

                    <!--LINE-->
                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:alpha="0.2"
                            android:layout_marginVertical="8dp"
                            android:background="@color/shimmer_placeholder" />

                    <!--GENDER-->
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:text="Gender" />

                        <TextView
                                android:id="@+id/characterDetailGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="5"
                                android:maxLines="2"
                                android:textAlignment="textEnd"
                                android:ellipsize="end"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                tools:text="Male" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>